{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "MyApp.Something.Tricky": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "/logs/MotorcycleLogAPI-.txt",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    },
    "AllowedHosts": "*",
    "MongoDbSettings": {
        "ConnectionString": "mongodb://127.0.0.1:27017",
        "DatabaseName": "RentH2_Motorcycle"
    },
    "ApiSettings": {
        "Secret": "98825677@fA6E-4a62!A18f*dF004680537c",
        "Issuer": "renth2-auth-api",
        "Audience": "renth2-client"
    },
    "ServiceUrls": {
        "RidersRentsAPI": "https://localhost:7001"
    }
}
