@using RentH2.Web.Utility
<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - RentH2</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
	<link rel="stylesheet" href="~/RentH2.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RentH2</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Sobre nós
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacidade</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" asp-controller="Home" asp-action="History">História</a></li>
								<li><hr class="dropdown-divider"></li>
							</ul>
						</li>
						@* @if (User.IsInRole(Roles.Administrator))
						{ *@
						<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Gerenciador de Conteudo
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li><a class="dropdown-item" asp-area="" asp-controller="Order" asp-action="OrderIndex">Pedidos</a></li>
									<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" asp-controller="Motorcycle" asp-action="MotorcycleIndex">Motocicletas</a></li>
									<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" asp-controller="Auth" asp-action="Register">Cadastro de Usuários</a></li>
									<li><hr class="dropdown-divider"></li>
								</ul>
							</li>
						@* } *@
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Minhas Coisas
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" >Pedidos</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" >Detalhes Aluguel</a></li>
								<li><hr class="dropdown-divider"></li>
							</ul>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Rent" asp-action="Index">
								Alugar Moto
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Cart" asp-action="CartIndex">
								&nbsp; <i class="bi bi-cart"></i>&nbsp;
							</a>
						</li>
					</ul>
					<ul class="navbar-nav">
						@if (!User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Auth" asp-action="Login">Entrar</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Auth" asp-action="RegisterUser">Registrar</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" href="#">Olá @User.Identity.Name</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Auth" asp-action="Logout">Sair</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
			<partial name="_Notifications" />
		</main>
	</div>

	<footer class="footer text-muted">
		<div class="text-center">
			Made with <i class="bi bi-heart-fill"></i> by Henry Fernandes Lopes
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
	<script src="~/lib/jqueryui/jquery-ui.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>





